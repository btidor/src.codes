#!/bin/bash

set -euf -o pipefail

cd /var/src.codes

export COMMIT="$(git log --pretty=format:%h -n 1)"

/usr/local/go/bin/go run \
    -ldflags "-X main.commit=$COMMIT" \
    ./grep serve \
    -cert /bulk/tls/certificate.pem \
    -key /bulk/tls/key.pem \
    -fastData /fast \
    -bulkData /bulk
